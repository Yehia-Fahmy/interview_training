# Quick activation file
# Run: source .envrc

# Try to activate conda environment first
if command -v conda &> /dev/null && conda env list | grep -q "^composer "; then
    eval "$(conda shell.bash hook)"
    conda activate composer
    echo "✅ Activated conda environment 'composer'"
# Otherwise try venv
elif [ -d "venv" ]; then
    source venv/bin/activate
    echo "✅ Activated virtual environment 'venv'"
else
    echo "⚠️  No environment found. Please run setup_conda.sh or setup.sh first."
fi

